{
    // 使用 IntelliSense 了解相关属性。 
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",

            // ⭐ 自动读取 .env 文件
            "envFile": "${workspaceFolder}/.env",

            // ⭐ 如果你需要附加环境变量也可以写这里（可选）
            "env": {
                // "NODE_ENV": "development"
            }
        }
    ]
}
